GET patient "http://example.com/api/v2/patients/:patient_id/tasks/activities" // Restituisce le attività per la paziente
    parametri:  executed=:true|:false //filtra le attività effettuate o non
                (date=:date) oppure (startdate=:startdate&enddate=:enddate) // filtra le attività di una determinata data oppure di un intervallo di date
                medic_id=:medic_id // filtra le attività per medico

{
    "activities": [
        {
            "task_id": 1,
            "medic_id":1,
            "category": "test",
            "description": "test",
            "date": "YYYY-MM-DD",
            "starting_program": "true|false",
            "executed": "true|false",
            "link": {
                "href": "http://example.com/patients/:patient_id/tasks/activities/:tasks_id", //link a questa attività
                "rel": "patient/tasks/activities/task",
                "type": "GET"
            }
        },
        {
            "task_id": 2,
            "medic_id":2,
            "category": "test",
            "description": "test",
            "date": "YYYY-MM-DD",
            "starting_program": "true|false",
            "executed": "true|false",
            "link": {
                "href": "http://example.com/patients/:patient_id/tasks/activities/:tasks_id", //link a questa attività
                "rel": "patient/tasks/activities/task",
                "type": "GET"
            }
        },
        .
        .
        .
        .
        .
    ],
    "links": [
        {
            "href": "http://example.com/api/v2/patients/:patient_id/tasks/activities?executed=:true", //link alle attività eseguite dalla paziente
            "rel": "self",
            "type": "GET"
        },
        {
            "href": "http://example.com/api/v2/patients/:patient_id/tasks/activities?executed=:false", //link alle attività non eseguite dalla paziente
            "rel": "self",
            "type": "GET"
        },
        {
            "href": "http://example.com/api/v2/patients/:patient_id/tasks/generic", //link ai task generici della paziente
            "rel": "patient/tasks/generic",
            "type": "GET"
        },
        {
            "href": "http://example.com/api/v2/patients/:patient_id/tasks/diets", //link alle diete della paziente
            "rel": "patient/tasks/diets",
            "type": "GET"
        }
    ]
}

