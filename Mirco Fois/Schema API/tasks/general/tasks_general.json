    parametri:  executed=:true|:false, //filtra i task generali eseguiti o non
                (date=:date) oppure (startdate=:startdate&enddate=:enddate) // filtra le diete di una determinata data oppure di un intervallo di date    

{
    "general": [
        {
            "task_id": 1,
            "medic_id":1,
            "title": "test",
            "description": "test",
            "programmed_date": "YYYY-MM-DD",
            "executed": "true|false",
            "link": {
                "href": "http://example.com/medics/:medics/tasks/general/:tasks_id", //link a questo task
                "rel": "self",
