GET medic "http://example.com/api/v2/medics/:medic_id/messages/sent" // Tutti i messaggi inviati di un medico
GET medic "http://example.com/api/v2/medics/:medic_id/messages/received" // Tutti i messaggi inviati di un medico
    parametri:  patient_id = :patient_id // Filtro per paziente
                (date = :date) oppure (startdate = :startdate enddate = :enddate) // Filtro per data oppure per un'intervallo di date //FORSE TOGLIERE

//esempio messaggi per il medico
{
    "messages": [
        {
            "patient_id": 1,
            "medic_id": 1,
            "timedate": "YYYY-MM-DD HH:mm:SS",
            "text": "text message",
            "link": {
                "href": "http://example.com/api/v2/medics/:medic_id/messages/sent|received?timedate=:timedate&patient_id=:patient_id", //link al singolo messaggio
                "rel": "self",
                "type": "GET"
            }
        },
        {
            "patient_id": 2,
            "medic_id": 1,
            "timedate": "YYYY-MM-DD HH:mm:SS",
            "text": "text message",
            "link": {
                "href": "http://example.com/api/v2/medics/:medic_id/messages/sent|received?timedate=:timedate&patient_id=:patient_id", //link al singolo messaggio
                "rel": "medic/messages/sent|received/message",
                "type": "GET"
            }
        },
        .
        .
        .
        .
    ],
    "links": [
        {
            "href": "http://example.com/api/v2/medics/:medic_id/messages/sent|received", //link ai messaggi ricevuti se già mostrati quelli inviati oppure ai messaggi inviati se mostrati quelli ricevuti
            "rel": "medic/messages/sent|received",
            "type": "GET"
        },
        {
            "href": "http://example.com/api/v2/medics/:medic_id/messages", //aggiunta di un nuovo messaggio per il medico
            "rel": "medic/messages",
            "type": "POST"
        }
    ]
}



