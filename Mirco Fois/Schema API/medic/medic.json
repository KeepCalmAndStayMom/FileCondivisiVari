{
    "id": 1,
    "name": "test",
    "surname": "test",
    "age": 50,
    "phone": "42340259238",
    "specialization": "test",
    "links": [
        {
            "href": "http://example.com/api/v2/medics/:medic_id/patients", //link ai pazienti del medico
